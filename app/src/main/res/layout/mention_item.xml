<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="2dp"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/cardview_dark_background"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/cardView_elevation"
    app:cardMaxElevation="@dimen/cardView_max_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/feed_card_avatar"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/actionBarItemBackground"
                android:contentDescription="@string/image_description"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher_round"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="37dp"/>

            <TextView
                android:id="@+id/feed_card_subheader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="GamerZ mentioned you"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="37dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/feed_card_supplementary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Anyone seen Askalany?!"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    </LinearLayout>


</android.support.v7.widget.CardView>
