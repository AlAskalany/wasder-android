<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginBottom="@dimen/card_view_margin_bottom"
    android:layout_marginEnd="@dimen/card_view_margin_end"
    android:layout_marginLeft="@dimen/card_view_margin_start"
    android:layout_marginRight="@dimen/card_view_margin_end"
    android:layout_marginStart="@dimen/card_view_margin_start"
    android:layout_marginTop="@dimen/card_view_margin_top"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/cardview_corner_radius"
    app:cardElevation="@dimen/cardView_elevation"
    app:cardMaxElevation="@dimen/cardView_max_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_group_imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/image_description"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/gamers"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_margin="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_group_title_textView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/fragment_group_subhead_textView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/subhead"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textSize="14sp"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/fragment_group_details_imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/actionBarItemBackground"
                android:contentDescription="@string/image_description"
                app:srcCompat="@android:drawable/ic_menu_more"/>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
