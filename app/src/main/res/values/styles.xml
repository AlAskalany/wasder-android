<resources
    >

    <style name="AppTheme.NoActionBar" parent="Base.Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="cardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/card_view_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/card_view_margin_start</item>
        <item name="android:layout_marginRight">@dimen/card_view_margin_end</item>
        <item name="android:layout_marginTop">@dimen/card_view_margin_top</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CollapsingToolbarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">112dp</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed|enterAlways</item>
        <item name="contentScrim">?attr/colorPrimary</item>
    </style>

    <style name="CollapsingToolbarLayoutWithTabsStyle" parent="CollapsingToolbarLayoutStyle">
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

</resources>
